<Window x:Class="WindowAppLilechka.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Светофор" Height="357" Width="200">
    <StackPanel Background="#FFB2B2B2">
        <Ellipse x:Name="RedLight" Fill="Gray" Width="50" Height="50" Margin="10" StrokeThickness="4" Stroke="Black"/>
        <Ellipse x:Name="YellowLight" Fill="Gray" Width="50" Height="50" Margin="10" StrokeThickness="4" Stroke="Black"/>
        <Ellipse x:Name="GreenLight" Fill="Gray" Width="50" Height="50" Margin="10" Stroke="Black" StrokeThickness="4"/>
        <Button Content="Красный" Click="RedButton_Click" Margin="10" BorderBrush="Black" Background="#FF929292"/>
        <Button Content="Желтый" Click="YellowButton_Click" Margin="10" BorderBrush="Black" Background="#FF929292"/>
        <Button Content="Зеленый" Click="GreenButton_Click" Margin="10" BorderBrush="Black" Background="#FF929292"/>
    </StackPanel>
</Window>
