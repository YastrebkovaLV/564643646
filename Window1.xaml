<Window x:Class="WindowAppLilechka.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кнопки детям не игрушка" Height="200" Width="300">
    <StackPanel Background="#FFB2A5A5">
        <TextBlock x:Name="GreetingText" Text="Добрый день!" Margin="10" FontSize="20"/>
        <Button x:Name="DontPressButton" Content="Не нажимать!" Background="Red" Click="DontPressButton_Click" Margin="10" BorderBrush="Black"/>
    </StackPanel>
</Window>


    
    